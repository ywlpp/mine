.text{
  width: 100%;
  height: 420rpx;
}
.text .h1{
    width: 100%;
    display: block;
    text-align: center;
    margin-top: 50px;
    font-size: 35rpx;
    line-height: .3rem;
    color: #494949;
    margin-bottom: .65rem;
    font-weight: bold;
    text-transform: uppercase;
}
.text .text1{
  width: 100%;
    display: block;
    font-size: 45rpx;
    line-height: 45rpx;
    color: #5c1317;
    margin-top: 40px;
    text-align: center;
    margin-bottom: .2rem;
}
.text .text2{
      width: 70%;
    display: block;
    margin: 30px auto;
    font-size: 31rpx;
