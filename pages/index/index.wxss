    color: #494949;
}
.th{
  height: 240px;
}
.th .thimg{
  width: 100%;
  position: absolute;
  top: -1;
}
.th .thimg1{
  z-index: 2;
  width: 25%;
  height: 9%;
  position: absolute;
  left: 37%;
  top: -1;
  margin-top: 12%;
}
.thtext{
  position: absolute;
  top: -1;
  text-align: center;
  margin-top: 30%;
  width: 100%;
  color: white;
  font-size: .7rem;
  z-index: 3;
}
.thview{
  width: 100px;
  height: 42px;
  background: #5c1317;
  color: white;
  position: absolute;
  font-size: .8rem;
  top: -1;
  left: 37%;
  line-height: 42px;
  text-align: center;
  margin-top: 43%;
}
.list{
  width: 375px;
  height: 280px;
  margin-top: 13px;
  position: relative;
}
.list image{
  width: 375px;
  height: 280px;
  position: absolute;
  top: 0;
}
.poblack{
  width: 100%;
  height: 45%;
  background: black;
  position: absolute;
  bottom: 0;
  opacity: .5;
}
.poblack view{
  position: absolute;
}
.poblack1{
  color: white;
  font-size: 1rem;
  width: 100%;
  position: absolute;
  bottom: 25%;
  text-align: center;
}
.poblack2{
    width: 100px;
    height: 42px;
    background: #5c1317;
    position: absolute;
    bottom: 8%;
    left: 37%;
    font-size: .7rem;
    line-height: 42px;
    text-align: center;
    color: #fff;
    /* padding-top: .25rem; */
